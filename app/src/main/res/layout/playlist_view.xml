<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            card_view:cardCornerRadius="@dimen/FS16DP">

        <ImageView
            android:id="@+id/placeholder_path"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/image_shape2" />
        </androidx.cardview.widget.CardView>


    <TextView
            android:id="@+id/playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="start"
            android:ellipsize="end"
            android:fontFamily="@font/ystextregular"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/FS16SP"
            android:textStyle="normal"
            android:text="@string/name" />

        <TextView
            android:id="@+id/tracks_count"
            android:layout_width="match_parent"
            android:fontFamily="@font/ystextregular"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/FS16SP"
            android:text="Количество треков" />
    </LinearLayout>