<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:windowSoftInputMode="adjustResize"
    android:background="?attr/colorSecondary"
    tools:context=".ui.media_lib.fragment.NewPlaylistFragment">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="?attr/colorSecondary"
        android:src="@drawable/arrow_back3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/MessageTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ystextmedium"
        android:gravity="start|center"
        android:textSize="@dimen/FS22SP"
        android:text="@string/new_playlist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_back"/>

    <ImageView
        android:id="@+id/add_label"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/image_shape"
        android:text="@string/hello_blank_fragment"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        app:layout_constraintBottom_toTopOf="@id/edit_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/FS16DP"
        android:layout_marginBottom="16dp"
        android:hint="@string/name"
        android:paddingStart="@dimen/FS16DP"
        android:textSize="@dimen/FS19SP"
        android:fontFamily="@font/ystextregular"
        android:singleLine="true"
        android:textColor="?attr/colorOnPrimary"
        android:textColorHint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@+id/edit_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edittext_rectangle"
        style="@style/MyEditTextStyle"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/FS16DP"
        android:layout_marginBottom="-10dp"
        android:background="?attr/colorSecondary"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/name"
        android:textColor="@color/blue"
        android:textSize="@dimen/FS16SP"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/edit_name"
        app:layout_constraintStart_toStartOf="@+id/edit_name" />

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/FS16DP"
        android:layout_marginBottom="170dp"
        android:drawableTint="?attr/colorPrimaryVariant"
        android:textColor="?attr/colorOnPrimary"
        android:hint="@string/description"
        android:imeOptions="actionDone"
        android:paddingStart="@dimen/FS16DP"
        android:textSize="@dimen/FS19SP"
        android:fontFamily="@font/ystextregular"
        android:singleLine="true"
        android:textColorHint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@+id/create_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edittext_rectangle"
        style="@style/MyEditTextStyle"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/FS16DP"
        android:layout_marginBottom="-10dp"
        android:background="?attr/colorSecondary"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/description"
        android:textColor="@color/blue"
        android:textSize="@dimen/FS16SP"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/edit_description"
        app:layout_constraintStart_toStartOf="@+id/edit_description" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/create"
        android:textColor="@color/white"
        android:fontFamily="@font/ystextmedium"
        android:textAllCaps="false"
        android:textSize="@dimen/FS19SP"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="17dp"
        android:state_enabled="false"
        android:background="@drawable/create_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>