<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.ui.search.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >

        <action
            android:id="@+id/action_searchFragment_to_playerActivity"
            app:destination="@id/playerActivity" />
    </fragment>
    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="com.example.playlistmaker.ui.media_lib.fragment.MediaLibraryFragment"
        android:label="fragment_media_library"
        tools:layout="@layout/fragment_media_library" >
        <action
            android:id="@+id/action_mediaLibraryFragment_to_playerActivity"
            app:destination="@id/playerActivity" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_newPlaylistFragment"
            app:destination="@id/newPlaylistFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_activePlaylistFragment"
            app:destination="@id/activePlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.ui.settings.fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <activity
        android:id="@+id/playerActivity"
        android:name="com.example.playlistmaker.ui.player.activity.PlayerActivity"
        android:label="activity_player"
        tools:layout="@layout/activity_player" >
        <argument
            android:name="trackArg"
            app:argType="com.example.playlistmaker.domain.model.Track"
            app:nullable="true" />
    </activity>
    <fragment
        android:id="@+id/featuredTracksFragment"
        android:name="com.example.playlistmaker.ui.media_lib.fragment.FeaturedTracksFragment"
        android:label="FeaturedTracksFragment"
        tools:layout="@layout/fragment_featured_tracks">
    </fragment>
    <fragment
        android:id="@+id/newPlaylistFragment"
        android:name="com.example.playlistmaker.ui.media_lib.fragment.NewPlaylistFragment"
        android:label="fragment_new_playlist"
        tools:layout="@layout/fragment_new_playlist" />
    <fragment
        android:id="@+id/activePlaylistFragment"
        android:name="com.example.playlistmaker.ui.media_lib.fragment.ActivePlaylistFragment"
        android:label="fragment_active_playlist"
        tools:layout="@layout/fragment_active_playlist">
        <argument
            android:name="playlistArg"
            app:argType="com.example.playlistmaker.domain.model.Playlist"
            app:nullable="true" />
        <action
            android:id="@+id/action_activePlaylistFragment_to_playerActivity"
            app:destination="@id/playerActivity" />
        <action
            android:id="@+id/action_activePlaylistFragment_to_editPlaylistFragment"
            app:destination="@id/editPlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/editPlaylistFragment"
        android:name="com.example.playlistmaker.ui.media_lib.fragment.EditPlaylistFragment"
        android:label="fragment_edit_playlist"
        tools:layout="@layout/fragment_edit_playlist" >
        <argument
            android:name="playlistArg"
            app:argType="com.example.playlistmaker.domain.model.Playlist"
            app:nullable="true" />
    </fragment>
</navigation>